{
    "git": {
        "commitMessage": "Release version ${version}",
        "tagName": "v${version}",
        "push": true,
        "requireCleanWorkingDir": true,
        "requireBranch": "main",
        "addUntrackedFiles": false
    },
    "github": {
        "release": true,
        "releaseName": "v${version}",
        "releaseNotes": ".release-notes-temp.md"
    },
    "npm": {
        "publish": true
    },
    "hooks": {
        "before:release": "node scripts/generate-release-notes.js ${latestTag} ${version}",
        "after:release": "rm -f .release-notes-temp.md"
    }
}